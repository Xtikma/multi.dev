{% extends 'base.html.twig' %}

{% block body %}
    <h1>Editions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>Pace</th>
                <th>Start</th>
                <th>End</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edition in editions %}
            <tr>
                <td><a href="{{ path('editions_show', { 'id': edition.id }) }}">{{ edition.id }}</a></td>
                <td>{{ edition.name }}</td>
                <td>{% if edition.year %}{{ edition.year|date('Y-m-d') }}{% endif %}</td>
                <td>{{ edition.pace }}</td>
                <td>{% if edition.start %}{{ edition.start|date('Y-m-d') }}{% endif %}</td>
                <td>{% if edition.end %}{{ edition.end|date('Y-m-d') }}{% endif %}</td>
                <td>{% if edition.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('editions_show', { 'id': edition.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('editions_edit', { 'id': edition.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('editions_new') }}">Create a new edition</a>
        </li>
    </ul>
{% endblock %}
