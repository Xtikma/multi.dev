{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edition</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ edition.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ edition.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{% if edition.year %}{{ edition.year|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Pace</th>
                <td>{{ edition.pace }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if edition.start %}{{ edition.start|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if edition.end %}{{ edition.end|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if edition.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('editions_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('editions_edit', { 'id': edition.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
