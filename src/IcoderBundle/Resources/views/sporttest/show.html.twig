{% extends 'IcoderBundle:sporttest:index.html.twig' %}

{% block panelTitle %}
    <h1 class="col-xs-3 panel-title">Detalles</h1>
    <a class="btn btn-primary col-xs-3 col-xs-offset-6" href="{{ path('test_index') }}">Listar Pruebas</a>
{% endblock %}

{% block panelBody %}
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ sportTest.name }}</td>
            </tr>
            <tr>
                <th>Femenino</th>
                <td>{% if sportTest.isFemale %}Si{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Rango</th>
                <td>
                    {% if sportTest.year1 %}{{ sportTest.year1|date('Y') }}{% endif %}
                    -
                    {% if sportTest.year2 %}{{ sportTest.year2|date('Y') }}{% endif %}
                </td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if sportTest.date %}{{ sportTest.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block panelFooter %}
    {{ form_start(delete_form) }}
    <input class="btn btn-primary col-xs-3" type="submit" value="Eliminar">
    {{ form_end(delete_form) }}
    <a class="btn btn-primary col-xs-2 col-xs-offset-2" href="{{ path('test_edit', { 'id': sportTest.id }) }}">Editar</a>
    <a class="btn btn-primary col-xs-3 col-xs-offset-2" href="{{ path('test_index') }}">Listar Pruebas</a>
{% endblock %}
