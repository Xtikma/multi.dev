{% extends 'IcoderBundle:type:index.html.twig' %}

{% block panelTitle %}
    <h1 class="col-xs-3 panel-title">Creando Tipo</h1>
    <a class="btn btn-primary col-xs-3 col-xs-offset-6" href="{{ path('type_index') }}">Listar Tipos</a>
{% endblock %}

{% block panelBody %}
    <form class="form-horizontal" action="{{path('type_new')}}" method="POST">
        <div class="form-group">
            <label class="col-xs-2 control-label">
                {{ form_widget(form.active) }} Activo
            </label>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label">Nombre</label>
            <div class="col-xs-10">
                {{ form_widget(form.name, {attr:{'class':'form-control'}}) }}
            </div>
        </div>
            <input class="btn btn-primary" type="submit" value="Agregar" />
        {{ form_end(form) }}
{% endblock %}

{% block panelFooter %}
    <a class="btn btn-primary col-xs-3" href="{{ path('type_index') }}">Listar Tipos</a>
{% endblock %}
