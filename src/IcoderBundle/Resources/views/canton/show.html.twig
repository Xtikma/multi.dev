{% extends 'base.html.twig' %}

{% block body %}
    <h1>Canton</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ canton.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ canton.name }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if canton.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('canton_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('canton_edit', { 'id': canton.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
