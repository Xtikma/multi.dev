{% extends 'IcoderBundle:canton:index.html.twig' %}

{% block panelTitle %}
    <h1 class="col-xs-3 panel-title">Detalles Cant√≥n</h1>
    <a class="btn btn-primary col-xs-3 col-xs-offset-6" href="{{ path('canton_index') }}">Listar Cantones</a>
{% endblock %}

{% block panelBody %}
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ canton.name }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if canton.active %}Si{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block panelFooter %}
    {{ form_start(delete_form) }}
    <input class="btn btn-primary col-xs-3" type="submit" value="Eliminar">
    {{ form_end(delete_form) }}
    <a class="btn btn-primary col-xs-2 col-xs-offset-2" href="{{ path('canton_edit', { 'id': canton.id }) }}">Editar</a>
    <a class="btn btn-primary col-xs-3 col-xs-offset-2" href="{{ path('canton_index') }}">Listar Cantones</a>
{% endblock %}
