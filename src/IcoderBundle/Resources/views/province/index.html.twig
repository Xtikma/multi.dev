{% extends 'base.html.twig' %}

{% block body %}
    <h1>Provinces list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for province in provinces %}
            <tr>
                <td><a href="{{ path('province_show', { 'id': province.id }) }}">{{ province.id }}</a></td>
                <td>{{ province.name }}</td>
                <td>{% if province.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('province_show', { 'id': province.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('province_edit', { 'id': province.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('province_new') }}">Create a new province</a>
        </li>
    </ul>
{% endblock %}
