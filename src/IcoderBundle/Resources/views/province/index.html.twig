{% extends 'template.html.twig' %}

{% block content_body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <h1 class="panel-title col-xs-3">Provincias</h1>
                <a href="{{ path('province_new') }}" class="col-xs-3 col-xs-offset-9 btn btn-primary">Agregar provincia</a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="hiddien">Id</th>
                    <th>Name</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for province in provinces %}
                    <tr>
                        <td><a href="{{ path('province_show', { 'id': province.id }) }}">{{ province.id }}</a></td>
                        <td>{{ province.name }}</td>
                        <td>{% if province.active %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('province_show', { 'id': province.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('province_edit', { 'id': province.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="panel-footer">
        <div class="row">
            <a href="{{ path('province_new') }}"class="col-xs-3 btn btn-primary">Agregar provincia</a>
        </div>
    </div>
{% endblock %}

{% block content_nav %}
    {% include 'IcoderBundle:province:nav_province.html.twig' %}
{% endblock %}
