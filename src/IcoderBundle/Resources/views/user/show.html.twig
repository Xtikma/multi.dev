{% extends 'IcoderBundle:user:index.html.twig' %}

{% block panelTitle %}
    <h1 class="col-xs-3 panel-title">Detalles Usuario</h1>
    <a class="btn btn-primary col-xs-3 col-xs-offset-6" href="{{ path('user_index') }}">Listar Usuarios</a>
{% endblock %}

{% block panelBody %}
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Nonbre</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Nombre de usuario</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Cedula</th>
                <td>{{ user.dni }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if user.active %}Si{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block panelFooter %}
    {{ form_start(delete_form) }}
    <input class="btn btn-primary col-xs-3" type="submit" value="Eliminar">
    {{ form_end(delete_form) }}
    <a class="btn btn-primary col-xs-2 col-xs-offset-2" href="{{ path('user_edit', { 'id': user.id }) }}">Editar</a>
    <a class="btn btn-primary col-xs-3 col-xs-offset-2" href="{{ path('user_index') }}">Listar Usuarios</a>
{% endblock %}
