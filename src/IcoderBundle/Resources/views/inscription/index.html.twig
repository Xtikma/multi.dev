{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscriptions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Register</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td><a href="{{ path('inscription_show', { 'id': inscription.id }) }}">{{ inscription.id }}</a></td>
                <td>{% if inscription.register %}{{ inscription.register|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('inscription_show', { 'id': inscription.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('inscription_edit', { 'id': inscription.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('inscription_new') }}">Create a new inscription</a>
        </li>
    </ul>
{% endblock %}
