{% extends 'IcoderBundle:sport:index.html.twig' %}

{% block pageTitle %}Categoria{% endblock %}

{% block title %}Categoria Deportes{% endblock %}

{% block panelTitle %}
    <h1 class="col-xs-3 panel-title">Lista Categorias</h1>
    <a class="btn btn-primary col-xs-3 col-xs-offset-6" href="{{ path('sport_category_new') }}">Agregar Categoria</a>
{% endblock %}

{% block panelBody %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Quota</th>
                <th>Equipo</th>
                <th>Activo</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td><a href="{{ path('sport_category_show', { 'id': category.id }) }}">{{ category.name }}</a></td>
                    <td>{{ category.quota }}</td>
                    <td>{% if category.isTeam %}Si{% else %}No{% endif %}</td>
                    <td>{% if category.active %}Si{% else %}No{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block panelFooter %}
    <a class="btn btn-primary col-xs-3" href="{{ path('sport_category_new') }}">Agregar Categoria</a>
{% endblock %}
