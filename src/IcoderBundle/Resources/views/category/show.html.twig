{% extends 'IcoderBundle:category:index.html.twig' %}

{% block panelTitle %}
    <h1 class="col-xs-3 panel-title">Detalles de categoria</h1>
    <a class="btn btn-primary col-xs-3 col-xs-offset-6" href="{{ path('sport_category_index') }}">Listar Categorias</a>
{% endblock %}

{% block panelBody %}
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Quota</th>
                <td>{{ category.quota }}</td>
            </tr>
            <tr>
                <th>Deporte Grupal</th>
                <td>{% if category.isTeam %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if category.active %}Si{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block panelFooter %}
    {{ form_start(delete_form) }}
    <input class="btn btn-primary col-xs-3" type="submit" value="Eliminar">
    {{ form_end(delete_form) }}
    <a class="btn btn-primary col-xs-2 col-xs-offset-2" href="{{ path('sport_category_edit', { 'id': category.id }) }}">Editar</a>
    <a class="btn btn-primary col-xs-3 col-xs-offset-2" href="{{ path('sport_category_index') }}">Listar Categorias</a>
{% endblock %}
