{% extends 'IcoderBundle:category:index.html.twig' %}

{% block panelTitle %}
    <h1 class="col-xs-3 panel-title">Agregar Categoria</h1>
    <a class="btn btn-primary col-xs-3 col-xs-offset-6" href="{{ path('sport_category_index') }}">Listar Categorias</a>
{% endblock %}

{% block panelBody %}
    {{ form_start(form, {attr: {'class': 'form-horizontal'}}) }}
    <div class="col-xs-12">
        <div class="col-xs-3">
            <label class="col-xs-12 ceckbox">
                {{ form_widget(form.isTeam, {attr:{'class':''}}) }} Activo
            </label>
        </div>
        <div class="col-xs-3 col-xs-offset-6">
            <label class="col-xs-12 ceckbox">
                {{ form_widget(form.active, {attr:{'class':''}}) }} Activo
            </label>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 control-label">Nombre</label>
        <div class="col-xs-10">
            {{ form_widget(form.name, {attr:{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 control-label">Quota</label>
        <div class="col-xs-10">
            {{ form_widget(form.quota, {attr:{'class':'form-control','type':'number'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 control-label">Deporte</label>
        <div class="col-xs-10">
            {{ form_widget(form.sport, {attr:{'class':'form-control'}}) }}
        </div>
    </div>
    <input class="btn btn-primary" type="submit" value="Agregar" />
    {{ form_end(form) }}
{% endblock %}

{% block panelFooter %}
    <a class="btn btn-primary col-xs-3" href="{{ path('sport_category_index') }}">Listar Categorias</a>
{% endblock %}
