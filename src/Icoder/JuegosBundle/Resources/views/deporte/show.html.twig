{% extends 'base.html.twig' %}

{% block body %}
    <h1>Deporte</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deporte.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ deporte.nombre }}</td>
            </tr>
            <tr>
                <th>Grupal</th>
                <td>{% if deporte.grupal %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Minimo</th>
                <td>{{ deporte.minimo }}</td>
            </tr>
            <tr>
                <th>Maximo</th>
                <td>{{ deporte.maximo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('deporte_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('deporte_edit', { 'id': deporte.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
